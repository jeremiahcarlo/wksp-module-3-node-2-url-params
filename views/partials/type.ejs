<div class="container-books">
  <% books.forEach(book => { %>
  <% if (book.type === type) { %>
  <div class="book">
    <!-- <img src="<%= book.imgUrl %>" alt="<%= book.title %> "> -->
    <a href="http://localhost:8000/books/book/<%= book.id %>">
      <img src="<%= book.imgUrl %>" alt="<%= book.title %> ">
    </a>
    <p><%= book.title %> </p>
    <p><%= book.author %> </p>
    <p><%= book.type %> </p>
  </div>
  <% } %>
  <% }) %>
</div>